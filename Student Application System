student_info = {}
def apply():
    student_name = input('Enter your full name: ')
    student_age = input('Enter your age: ')
    student_email = input('Enter your email: ')
    grade = input('Enter your grade (A,B,C,D,E or F): ')
    eligibility = False
    if grade == 'A' or grade == 'B' or grade == 'C':
        eligibility = True

    if eligibility == True:
        print(f"Congratulations {student_name}, you have been admitted to our school")
        student_info['student_name'] = student_name
        student_info['student_age'] = student_age
        student_info['student_email'] = student_email
        student_info['grade'] = grade
        print("This is your student information\n", student_info)
    else:
        print(f"Sorry {student_name}, you are not eligible for admission with a grade of {grade}.")


apply()
